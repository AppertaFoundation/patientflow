<openerp>
    <data>
        <record model="ir.ui.view" id="view_nhc_daily_shift_tree">
            <field name="name">NHC Shift Pattern Tree</field>
            <field name="model">nh.clinical.shift.pattern</field>
            <field name="arch" type="xml">
                <tree string="Shift Patterns" version="7.0" editable="inline">
                    <field name="start_time_string"/>
                    <field name="end_time_string"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_nhc_daily_shift_form">
            <field name="name">NHC Shift Pattern Form</field>
            <field name="model">nh.clinical.shift.pattern</field>
            <field name="arch" type="xml">
                <form string="Shift Pattern" version="7.0">
                    <sheet>
                        <group>
                            <field name="start_time_string"/>
                            <field name="end_time_string"/>
                            <field name="duration"/>
                            <field name="location_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>