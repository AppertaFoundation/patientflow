<openerp>
    <data>
        <record model="ir.ui.view" id="view_nh_etake_list_overview_search">
            <field name="name">NH eTake List Overview Search View</field>
            <field name="model">nh.etake_list.overview</field>
            <field name="arch" type="xml">
                <search string="NH eTake List Overview Search View">
                    <field name="location_id"/>
                    <field name="patient_id"/>
                    <group expand="1" string="Group By...">
                        <filter name="group_by_state" string="State" domain="[]" context="{'group_by':'state'}" help="Group by State"/>
                        <filter name="group_by_ward" string="Ward" domain="[]" context="{'group_by':'location_id'}" help="Group by Ward"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="view_nh_etake_list_overview_tree">
            <field name="name">NH eTake List Overview Tree View</field>
            <field name="model">nh.etake_list.overview</field>
            <field name="arch" type="xml">
                <tree string="NH eTake List Overview Tree View" version="7.0">
                    <!--<button name="complete" type="object" string="Complete" class="oe_highlight" nh_icon="down-caret-1"/>-->
                    <field name="location_id" />
                    <field name="patient_id" />
                    <field name="hospital_number" />
                    <field name="pos_id" />
                    <field name="state" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_nh_etake_list_overview_form">
            <field name="name">NH eTake List Overview Form View</field>
            <field name="model">nh.etake_list.overview</field>
            <field name="arch" type="xml">
                <form string="NH eTake List Overview Form View" version="7.0" create="0" delete="0">
                    <sheet>
                        <group>
                            <field name="location_id" domain="[['usage', '=', 'ward'], ['user_ids', 'in', uid]]"/>
                            <field name="patient_id" />
                            <field name="hospital_number" />
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_nh_etake_list_overview_kanban">
            <field name="name">NH eTake List Overview Kanban View</field>
            <field name="model">nh.etake_list.overview</field>
            <field name="arch" type="xml">
                <kanban edit="false" quick_create="false" create="false">
                    <field name="location_id"/>
                    <field name="patient_id"/>
                    <field name="hospital_number"/>
                    <field name="pos_id" />
                    <field name="state"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="tasks">
                                <div class="section-one">
                                    <!-- <ul>
                                        <li>Review</li>
                                    </ul> -->
                                    <ul>
                                        <li><i class="time-overdue"></i></li>
                                        <!-- <li><field name="next_diff"/></li> -->
                                    </ul>
                                </div>
                                <div class="section-two">
                                    <ul>
                                        <li><field name="patient_id"/></li>
                                    </ul>
                                    <ul>
                                        <li class="p-info"><field name="age"/></li>
                                        <li class="p-info">
                                            <t t-if="record.gender.raw_value == 'M'">
                                                <img t-attf-src="/nh_etake_list/static/src/img/icons/male.png" t-att-alt="Male"/>
                                            </t>
                                            <t t-if="record.gender.raw_value == 'F'">
                                                <img t-attf-src="/nh_etake_list/static/src/img/icons/female.png" t-att-alt="Female"/>
                                            </t>
                                        </li>
                                       <!-- <li class="p-info"><field name="ews_score_string"/>
                                            <t t-if="record.ews_trend_string.raw_value === 'up'">
                                                <i class="up"></i>
                                            </t>
                                            <t t-if="record.ews_trend_string.raw_value === 'down'">
                                                <i class="down"></i>
                                            </t>
                                            <t t-if="record.ews_trend_string.raw_value === 'same'">
                                                <i class="same"></i>
                                            </t>
                                            <t t-if="record.ews_trend_string.raw_value === 'one'"></t>
                                            <t t-if="record.ews_trend_string.raw_value === 'none'"></t>
                                        </li> -->
                                        <li class="last"><field name="location_id"/> <!-- <i class="bed-move"></i> <field name="location_full_name"/> --></li>
                                    </ul>
                                </div>
                                <div class="section-three">
                                    <ul>
                                        <li>
                                            <t t-if="record.state.raw_value == 'Referral'">
                                                <button name="complete_referral" type="object" class="oe_highlight">Accept</button>
                                            </t>
                                            <t t-if="record.state.raw_value == 'TCI'">
                                                <button name="complete_tci" type="object" class="oe_highlight">Arrived</button>
                                            </t>
                                            <t t-if="record.state.raw_value == 'To be Clerked'">
                                                <button name="start_clerking" type="object" class="oe_highlight">Clerk</button>
                                            </t>
                                            <t t-if="record.state.raw_value == 'Clerking in Process'">
                                                <button name="complete_clerking" type="object" class="oe_highlight">Complete</button>
                                            </t>
                                            <t t-if="record.state.raw_value == 'Senior Review'">
                                                <button name="complete_review" type="object" class="oe_highlight">Complete</button>
                                            </t>
                                            <t t-if="record.state.raw_value == 'Consultant Review'">
                                                <button name="complete_ptwr" type="object" class="oe_highlight">Complete</button>
                                            </t>
                                            <t t-if="record.state.raw_value == 'To be Discharged'">
                                                <button name="discharge" type="object" class="oe_highlight">Discharge</button>
                                            </t>
                                        </li>
                                    </ul>
                                    <ul>
                                        <li class="num-id">NHS</li>
                                        <li>
                                            <t t-if="record.nhs_number.raw_value != ''"><field name="nhs_number"/></t>
                                        </li>
                                    </ul>
                                    <ul>
                                        <li class="num-id">Hospital</li>
                                        <li>
                                            <t t-if="record.hospital_number.raw_value != ''"><field name="hospital_number"/></t>
                                        </li>
                                    </ul>
                                </div>
                            </div>


                            <!-- <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div><b><field name="patient_id"/></b></div>
                                    <div>
                                        <field name="age"/>
                                        <t t-if="record.gender.raw_value == 'M'">
                                            <img t-attf-src="/nh_etake_list/static/src/img/icons/male.png" t-att-alt="Male"/>
                                        </t>
                                        <t t-if="record.gender.raw_value == 'F'">
                                            <img t-attf-src="/nh_etake_list/static/src/img/icons/female.png" t-att-alt="Female"/>
                                        </t>
                                        <field name="location_id"/>
                                    </div>
                                    <div>
                                        <t t-if="record.state.raw_value == 'Referral'">
                                            <button name="complete_referral" type="object" class="oe_highlight">Accept</button>
                                        </t>
                                        <t t-if="record.state.raw_value == 'TCI'">
                                            <button name="complete_tci" type="object" class="oe_highlight">Arrived</button>
                                        </t>
                                        <t t-if="record.state.raw_value == 'To be Clerked'">
                                            <button name="start_clerking" type="object" class="oe_highlight">Clerk</button>
                                        </t>
                                        <t t-if="record.state.raw_value == 'Clerking in Process'">
                                            <button name="complete_clerking" type="object" class="oe_highlight">Complete</button>
                                        </t>
                                        <t t-if="record.state.raw_value == 'Senior Review'">
                                            <button name="complete_review" type="object" class="oe_highlight">Complete</button>
                                        </t>
                                        <t t-if="record.state.raw_value == 'Consultant Review'">
                                            <button name="complete_ptwr" type="object" class="oe_highlight">Complete</button>
                                        </t>
                                        <t t-if="record.state.raw_value == 'To be Discharged'">
                                            <button name="discharge" type="object" class="oe_highlight">Discharge</button>
                                        </t>
                                    </div>
                                    <t t-if="record.hospital_number.raw_value != ''">
                                        <div>Hospital Number: <field name="hospital_number"/></div>
                                    </t>
                                    <t t-if="record.nhs_number.raw_value != ''">
                                        <div>NHS Number: <field name="nhs_number"/></div>
                                    </t>
                                </div>
                            </div>     -->
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_show_overview_kanban" >
            <field name="name">Referral Board</field>
            <field name="res_model">nh.etake_list.overview</field>
            <field name="view_type">form</field>
            <field name="domain">[('state','not in',['Done','Other'])]</field>
            <field name="context">{'search_default_group_by_state':1}</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="view_nh_etake_list_overview_kanban"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_view_overview_kanban">
            <field eval="0" name="sequence"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_nh_etake_list_overview_kanban"/>
            <field name="act_window_id" ref="action_show_overview_kanban"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_view_overview_form">
            <field eval="1" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_nh_etake_list_overview_form"/>
            <field name="act_window_id" ref="action_show_overview_kanban"/>
        </record>

        <template inherit_id="web.webclient_bootstrap" name="Test Index" id="test_index">
            <xpath expr="t/div[@class='openerp openerp_webclient_container']" position="replace">
                <div class='openerp openerp_webclient_container'>
                    <div class='oe_webclient'>
                        <div class="oe_leftbar nh_kiosk_nav">
                            <div groups="base.group_user,base.group_portal">
                                <t t-call="web.menu_secondary"/>
                            </div>
                        </div>
                        <div class='oe_application'></div>
                    </div>
                </div>
            </xpath>
        </template>

        <template id="assets_backend" name="etake list assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/nh_etake_list/static/src/css/etake_style.css"/>
                <script type="text/javascript" src="/nh_etake_list/static/src/js/nh_etake_list.js"/>
            </xpath>
        </template>

    </data>
</openerp>