<openerp>
    <data>
        <record model="ir.ui.view" id="view_nh_etake_list_clerking_search">
            <field name="name">NH eTake List Clerking Search View</field>
            <field name="model">nh.etake_list.clerking</field>
            <field name="arch" type="xml">
                <search string="NH eTake List Clerking Search View">
                    <field name="location_id"/>
                    <field name="patient_id"/>
                    <group expand="1" string="Group By...">
                        <filter name="group_by_state" string="State" domain="[]" context="{'group_by':'state'}" help="Group by State"/>
                        <filter name="group_by_ward" string="Ward" domain="[]" context="{'group_by':'location_id'}" help="Group by Ward"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_nh_etake_list_clerking_tree">
            <field name="name">NH eTake List Clerking Tree View</field>
            <field name="model">nh.etake_list.clerking</field>
            <field name="arch" type="xml">
                <tree string="NH eTake List Clerking Tree View" version="7.0" create="0" delete="0">
                    <field name="location_id"/>
                    <field name="patient_id"/>
                    <field name="hospital_number"/>
                    <field name="date_started"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_nh_etake_list_clerking_form">
            <field name="name">NH eTake List Clerking Form View</field>
            <field name="model">nh.etake_list.clerking</field>
            <field name="arch" type="xml">
                <form string="NH eTake List Clerking Form View" version="7.0" create="0" delete="0">
                    <header>
                        <button name="start" string="Start Clerking"  type="object" attrs="{'invisible':[['state','!=','To be Clerked']]}"/>
                        <button name="complete" string="Complete Clerking"  type="object" attrs="{'invisible':[['state','!=','Clerking']]}"/>
                        <button name="create_task" string="Create Task"  type="object" attrs="{'invisible':[['state','!=','Clerking']]}"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="location_id" readonly="1"/>
                            <field name="patient_id" readonly="1"/>
                            <field name="hospital_number" readonly="1"/>
                            <field name="state" readonly="1"/>
                            <field name="date_started" readonly="1"/>
                            <field name="date_terminated" readonly="1"/>
                        </group>
                        <label for="diagnosis" string="Diagnosis:"/>
                        <field name="diagnosis" label="Diagnosis"/>
                        <label for="plan" string="Plan:"/>
                        <field name="plan" label="Plan"/>
                        <notebook>
                            <page string="Tasks">
                                <field name="doctor_task_ids">
                                    <tree edit="1" create="0" delete="0" editable="bottom">
                                        <field name="summary"/>
                                        <field name="state" readonly="1"/>
                                        <field name="date_terminated" readonly="1"/>
                                        <button name="complete" type="object" icon="gtk-cancel" string="Complete"/>
                                    </tree>
                                    <form>
                                        <field name="summary"/>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_nh_etake_list_clerking_kanban">
            <field name="name">NH eTake List Clerking Kanban View</field>
            <field name="model">nh.etake_list.clerking</field>
            <field name="arch" type="xml">
                <kanban edit="false" quick_create="false" create="false">
                    <field name="location_id"/>
                    <field name="patient_id"/>
                    <field name="hospital_number"/>
                    <field name="diagnosis"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div><field name="location_id"/></div>
                                    <div><b><field name="patient_id"/></b>
                                    </div>
                                    <t t-if="record.diagnosis.raw_value != ''">
                                        <div><field name="diagnosis"/></div>
                                    </t>
                                    <t t-if="record.hospital_number.raw_value != ''">
                                        <div>Hospital Number: <field name="hospital_number"/></div>
                                    </t>
                                    <t t-if="record.nhs_number.raw_value != ''">
                                        <div>NHS Number: <field name="nhs_number"/></div>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_show_tobeclerked" >
            <field name="name">Patients to be Clerked</field>
            <field name="res_model">nh.etake_list.clerking</field>
            <field name="view_type">form</field>
            <field name="domain">[('user_ids','in',uid),('state','in',['To be Clerked','Clerking'])]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_nh_etake_list_clerking_tree"/>
        </record>

        <record model="ir.actions.act_window" id="action_show_clerking_kanban" >
            <field name="name">My Patients</field>
            <field name="res_model">nh.etake_list.clerking</field>
            <field name="view_type">form</field>
            <field name="domain">[('user_ids','in',uid),('state','!=','Other')]</field>
            <field name="context">{'search_default_group_by_state':1}</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="view_nh_etake_list_clerking_kanban"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_view_clerking_tree">
            <field eval="0" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_nh_etake_list_clerking_tree"/>
            <field name="act_window_id" ref="action_show_tobeclerked"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_view_clerking_form">
            <field eval="1" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_nh_etake_list_clerking_form"/>
            <field name="act_window_id" ref="action_show_tobeclerked"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_view_clerking_kanban">
            <field eval="0" name="sequence"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_nh_etake_list_clerking_kanban"/>
            <field name="act_window_id" ref="action_show_clerking_kanban"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_view_clerking_form2">
            <field eval="1" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_nh_etake_list_clerking_form"/>
            <field name="act_window_id" ref="action_show_clerking_kanban"/>
        </record>
    </data>
</openerp>